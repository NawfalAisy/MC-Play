<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lighttosca"
    android:layout_marginTop="14dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    android:id="@+id/cardviewhistory">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/lowblue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manchester City F.C"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premiere League"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="44dp"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Man City"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arsenal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="274dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logomancity"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="263dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/arsenal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:45"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEAT 17E"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="184dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>